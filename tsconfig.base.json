{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@todo/modules/authentication": [
        "libs/modules/authentication/src/index.ts"
      ],
      "@todo/modules/todo": ["libs/modules/todo/src/index.ts"],
      "@todo/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@todo/shared/components": ["libs/shared/components/src/index.ts"],
      "@todo/shared/core": ["libs/shared/core/src/index.ts"],
      "@todo/shared/domain-types": ["libs/shared/domain-types/src/index.ts"],
      "@todo/shared/environment": ["libs/shared/environment/src/index.ts"],
      "@todo/shared/services": ["libs/shared/services/src/index.ts"],
      "@todo/shared/styles": ["libs/shared/styles/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
